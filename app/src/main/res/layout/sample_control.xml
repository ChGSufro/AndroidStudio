<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/InicioSesion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.InicioSesion">

    <Spinner
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/Verde_musgo"
        android:popupBackground="@color/Verde_musgo"
        android:spinnerMode="dropdown"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/botonSubir"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:background="@color/Verde_musgo"
        android:foreground="@drawable/flecha"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@+id/menu"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/botonBajar"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:background="@color/Verde_musgo"
        android:foreground="@drawable/flecha"
        android:layout_marginTop="40dp"
        android:rotation="180"
        app:layout_constraintTop_toBottomOf="@+id/botonSubir"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>