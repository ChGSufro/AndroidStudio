<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:context=".ui.Variables">

        <Spinner
            android:id="@+id/menu"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/Verde_musgo"
            android:popupBackground="@color/Verde_musgo"
            android:spinnerMode="dropdown"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/saludo"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="Bienvenido:\n "
            android:textStyle="bold"
            android:textSize="18dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/menu"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/dispConectado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dispositivo: Sin conexiÃ³n."
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/saludo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <ImageView
            android:id="@+id/iconoHumedad"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toBottomOf="@id/dispConectado"
            app:layout_constraintLeft_toLeftOf="parent"
            app:srcCompat="@drawable/hume"/>

        <TextView
            android:id="@+id/etiquetaHumedad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"
            android:text="Humedad:"
            android:textStyle="bold"
            android:textColor="@color/light_blue_400"
            app:layout_constraintTop_toBottomOf="@id/dispConectado"
            app:layout_constraintLeft_toRightOf="@id/iconoHumedad" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/progresHumedad"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="35dp"
            app:layout_constraintTop_toBottomOf="@id/dispConectado"
            app:layout_constraintRight_toRightOf="parent"/>

        <ImageView
            android:id="@+id/iconoTemperatura"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toBottomOf="@+id/iconoHumedad"
            app:layout_constraintLeft_toLeftOf="parent"
            app:srcCompat="@drawable/temp"/>

        <TextView
            android:id="@+id/etiquetaTemperatura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:text="Temperatura:"
            android:textStyle="bold"
            android:textColor="@color/temperatura"
            app:layout_constraintTop_toBottomOf="@+id/iconoHumedad"
            app:layout_constraintLeft_toRightOf="@+id/iconoTemperatura" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/progresTemperatura"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="55dp"
            android:layout_marginRight="55dp"
            app:layout_constraintTop_toBottomOf="@+id/dispConectado"
            app:layout_constraintRight_toRightOf="parent"/>

        <ImageView
            android:id="@+id/iconoLuminosidad"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toBottomOf="@+id/iconoTemperatura"
            app:layout_constraintLeft_toLeftOf="parent"
            app:srcCompat="@drawable/luz"/>

        <TextView
            android:id="@+id/etiquetaLuminosidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:text="Luminosidad:"
            android:textStyle="bold"
            android:textColor="@color/luminosidad"
            app:layout_constraintTop_toBottomOf="@+id/iconoTemperatura"
            app:layout_constraintLeft_toRightOf="@+id/iconoLuminosidad" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/progresLuminosidad"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="75dp"
            android:layout_marginRight="75dp"
            app:layout_constraintTop_toBottomOf="@+id/dispConectado"
            app:layout_constraintRight_toRightOf="parent"/>

        <Button
            android:id="@+id/botonActualizar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Actualizar"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@id/iconoLuminosidad"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/botonDetener"/>

        <Button
            android:id="@+id/botonDetener"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detener"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@id/iconoLuminosidad"
            app:layout_constraintLeft_toRightOf="@id/botonActualizar"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/humedadRecomendada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="Humedad recomendada:"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/botonActualizar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/humedadRecomendadaValor"/>

        <EditText
            android:id="@+id/humedadRecomendadaValor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:inputType="number"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:hint="Ingrese valor"
            android:layout_marginRight="40dp"
            app:layout_constraintTop_toBottomOf="@id/botonActualizar"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/temperaturaRecomendada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Temperatura recomendada:"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/humedadRecomendada"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/temperaturaRecomendadaValor"/>

        <EditText
            android:id="@+id/temperaturaRecomendadaValor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:hint="Ingrese valor"
            android:layout_marginRight="40dp"
            app:layout_constraintTop_toBottomOf="@id/humedadRecomendada"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/luminosidadRecomendada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Luminosidad recomendada:"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/temperaturaRecomendada"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/luminosidadRecomendadaValor"/>

        <EditText
            android:id="@+id/luminosidadRecomendadaValor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:hint="Ingrese valor"
            android:layout_marginRight="40dp"
            app:layout_constraintTop_toBottomOf="@id/temperaturaRecomendada"
            app:layout_constraintRight_toRightOf="parent"/>

            <Button
                android:id="@+id/botonGuardarDatos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guardar"
                android:layout_marginTop="60dp"
                app:layout_constraintTop_toBottomOf="@id/luminosidadRecomendada"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>